<!DOCTYPE suite SYSTEM "cmdlinetester.dtd">
<suite id="supportedfips140-3.xml" timeout="1000">
	<test id="Ensure FIPS 140-2 is the default on all supported platforms">
		<command>$EXE$ -XshowSettings -version</command>
		<output type="required" caseSensitive="no" regex="no">java version</output>
		<output type="success" caseSensitive="no" regex="no">com.ibm.fips.mode = 140-2</output>
		<output type="failure" caseSensitive="no" regex="no">FIPS 140-3 mode enabled</output>
	</test>
	<test id="Ensure -Xenablefips140-3 is recognized and activates 140-3 mode on all supported platforms">
		<command>$EXE$ -Xenablefips140-3 -XshowSettings -version</command>
		<output type="required" caseSensitive="no" regex="no">java version</output>
		<output type="required" caseSensitive="no" regex="no">FIPS 140-3 mode enabled</output>
		<output type="success" caseSensitive="no" regex="no">com.ibm.fips.mode = 140-3</output>
		<output type="failure" regex="no">Command-line option unrecognised</output>
	</test>
	<test id="Ensure -Xenablefips140-3 overrides any earlier -Xdisablefips140-3 on all supported platforms">
		<command>$EXE$ -Xdisablefips140-3 -Xenablefips140-3 -XshowSettings -version</command>
		<output type="required" caseSensitive="no" regex="no">java version</output>
		<output type="required" caseSensitive="no" regex="no">FIPS 140-3 mode enabled</output>
		<output type="success" caseSensitive="no" regex="no">com.ibm.fips.mode = 140-3</output>
		<output type="failure" regex="no">Command-line option unrecognised</output>
	</test>
	<test id="Ensure -Xdisablefips140-3 is recognized and disables 140-3 mode on all supported platforms">
		<command>$EXE$ -Xenablefips140-3 -Xdisablefips140-3 -XshowSettings -version</command>
		<output type="required" caseSensitive="no" regex="no">java version</output>
		<output type="success" caseSensitive="no" regex="no">com.ibm.fips.mode = 140-2</output>
		<output type="failure" caseSensitive="no" regex="no">FIPS 140-3 mode enabled</output>
		<output type="failure" regex="no">Command-line option unrecognised</output>
	</test>
</suite>
